---
import { categoryConfig } from '../lib/categoryConfig';

interface Props {
  category: 'tech' | 'science' | 'history' | 'gaming' | 'maker' | 'other';
}

const { category } = Astro.props;

const config = categoryConfig[category];
---

<span
  class="inline-flex items-center gap-1.5 text-xs tracking-widest font-mono font-semibold border px-2 py-0.5"
  style={`color: ${config.color}; border-color: ${config.color}`}
>
  {config.label}
</span>
