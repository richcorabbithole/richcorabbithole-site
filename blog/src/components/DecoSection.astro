---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex items-center gap-4 mb-8">
  <div class="h-px flex-1 bg-vault-raised"></div>
  <h2 class="font-heading text-xl text-amber tracking-widest uppercase whitespace-nowrap">
    {title}
  </h2>
  <div class="h-px flex-1 bg-vault-raised"></div>
</div>
