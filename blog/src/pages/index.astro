---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort by publish date, newest first
const sortedPosts = blogPosts.sort((a, b) => 
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);
---

<Layout title="richcorabbithole - A blog about hyperfixations">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-2">richcorabbithole</h1>
      <p class="text-lg text-gray-600">Deep dives into tech, science, history, gaming, and maker projects</p>
    </header>

    <section>
      <h2 class="text-2xl font-semibold mb-6">Recent Posts</h2>
      <div class="space-y-6">
        {sortedPosts.map((post) => (
          <article class="border-b pb-6">
            <h3 class="text-xl font-semibold mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
                {post.data.title}
              </a>
            </h3>
            <div class="text-sm text-gray-500 mb-2">
              <span class="capitalize">{post.data.hyperfixation}</span> • 
              Research Depth: {post.data.researchDepth}/5 • 
              {post.data.publishDate.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </div>
            <p class="text-gray-700 mb-3">{post.data.description}</p>
            <div class="flex gap-2">
              {post.data.tags.map((tag) => (
                <span class="text-xs bg-gray-200 px-2 py-1 rounded">{tag}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
</Layout>
